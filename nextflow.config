params {

    // Reads and references
    

    // Directories
    outdir = "$projectDir/results/"
    refdir = "$projectDir/refs/"
    genome = "$refdir/mm10.fa"
    project_accession = "PRJNA1107625"
    adapters = "$refdir/adapters.fa"
    blacklist = "$refdir/mm10.blacklist.bed"
    metadata = "$refdir/metadata.csv"
    gtf = "$refdir/mm10.gtf"
    window = 2000
    ucsc_genes = "$refdir/mm10_genes.bed" 
}

profiles {
    conda {
        conda.enabled = true
    }
    singularity {
        singularity.enabled = true
        singularity.autoMounts = true
    }
    cluster {
        process {
                executor = 'sge'
                clusterOptions = '-P bf528'
                penv = 'omp'

                withLabel: process_single {
                    cpus = 1
                }

                withLabel: process_low {
                    cpus = 4

                }
                withLabel: process_medium {
                    cpus = 8
                }
                
                withLabel: process_high {
                    cpus = 16
                }
        }
    }

    local {
        process.executor = 'local'
    }
}

executor {
    $sge {
        queueSize = 8
    }
    $local {
        cpus = 1
    }
}

resume = true
